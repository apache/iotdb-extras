    <parent>
        <groupId>org.apache.iotdb</groupId>
        <artifactId>iotdb-collector</artifactId>
        <version>2.0.2-SNAPSHOT</version>
    </parent>
    <artifactId>collector-core</artifactId>
    <name>IoTDB: Collector: Core</name>
    <dependencies>
